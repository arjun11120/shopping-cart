<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th scope="col">Price</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th class="p_id" scope="row">{{i}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Discription}}</td>
      <td>â‚¹{{this.Price}}</td>
      
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
      <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  var list = document.getElementsByClassName("p_id");
for (var i = 1; i <= list.length; i++) {
    list[i-1].innerHTML = i;  
}

</script>